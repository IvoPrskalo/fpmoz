<extension version="3.4" type="template" client="site">
    <name>fpmoz</name>
    <creationDate>2015-12-01</creationDate>
    <author>Teamcode Studio</author>
    <authorEmail>kontakt@teamcode.info</authorEmail>
    <authorUrl>http://www.teamcode.info</authorUrl>
    <copyright>Copyright (C) 2015 Teamcode Studio. Sva prava pridr≈æana.</copyright>
    <license>GNU/GPL</license>
    <version>1.0</version>
    <description>TPL_FPMOZ_XML_DESCRIPTION</description>
    <files>
        <folder>css</folder>
        <folder>fonts</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>language</folder>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>favicon.ico</filename>
        <filename>index.php</filename>
        <filename>offline.php</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <filename>templateDetails.xml</filename>
    </files>
    <positions>
        <position>debug</position>
        <position>topmenu</position>
        <position>search</position>
        <position>mainmenu</position>
        <position>slideshow</position>
        <position>breadcrumbs</position>
        <position>top</position>
        <position>abovecontent</position>
        <position>left</position>
        <position>right</position>
        <position>belowcontent</position>
        <position>bottom</position>
        <position>bottom1</position>
        <position>bottom2</position>
        <position>bottom3</position>
        <position>bottom4</position>
    </positions>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_fpmoz.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_fpmoz.sys.ini</language>
        <language tag="hr-HR">hr-HR/hr-HR.tpl_fpmoz.ini</language>
        <language tag="hr-HR">hr-HR/hr-HR.tpl_fpmoz.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="debug"
                       type="radio"
                       class="btn-group btn-group-yesno"
                       default="0"
                       label="TPL_FPMOZ_DEBUG_LABEL"
                       description="TPL_FPMOZ_DEBUG_DESC"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
